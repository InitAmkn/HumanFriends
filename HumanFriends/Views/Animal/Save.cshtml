@{
    ViewData["Title"] = "title";
    Layout = "_Layout";
}
@model HumanFriends.Domain.View.AnimalView




<form asp-controller="Animal" asp-action="Save" method="post">
    <div class="mb-3">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.Name" type="text" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Birthday" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.Birthday" type="date" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="col-form-label text-black-50"></label>
            <select class="form-select" asp-items="@Model.TypeAnimalSelectList" asp-for="SelectedTypeAnimal"></select>
        </div> 
        <div class="form-control">
            @for (int i = 0; i < Model.CommandsAnimalSelect.Count;i++)
            {
                <input asp-for="SelectedCommandsAnimalByID[i]" type="checkbox" />
                <label for="scales">@Model.CommandsAnimalSelect[i].Name</label>
            }
          
        </div> 
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>